			for (int i = 0; i < 9; i++)
			{
				int x = (i % 3) * 110 + j * 350;
				int y = (i / 3) * 110;

				Button btn = new Button();
				btn.Size = new Vector2(100, 100);
				btn.SetPosition(new Vector2(x, y), false); 
				gamePlay.AddChild(btn);
			}
		}
	}

	// Called every frame. 'delta' is the elapsed time since the previous frame.
